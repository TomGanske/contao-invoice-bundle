{
    "name": "cteye/invoice-bundle",
    "type": "contao-bundle",
    "description": "Contao 4 Invoice Bundle is a whole software application based on the Contao CMS 4.",
    "keywords": ["contao", "symfony", "invoice"],
    "license": "MIT",
    "homepage": "https://www.ct-eye.com",
    "authors": [
        {
            "name": "Tom Ganske",
            "homepage": "http://www.ct-eye.com",
            "role":"Developer"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "contao/core-bundle":"^4.4",
        "dompdf/dompdf":"^0.8.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "doctrine/data-fixtures": "1.2.*",
        "doctrine/dbal": "~2.4",
        "doctrine/orm": "~2.4,>=2.4.5",
        "doctrine/doctrine-bundle": "~1.2"
    },
    "autoload": {
      "psr-4": {
          "CtEye\\Invoice\\": "src/"
        },
        "classmap": [
            "src/Resources/contao/"
        ],
        "exclude-from-classmap": [
            "src/Resources/contao/config/",
            "src/Resources/contao/dca/",
            "src/Resources/contao/languages/",
            "src/Resources/contao/templates/"
        ]
    },
    "extra": {
      "contao-manager-plugin": "CtEye\\Invoice\\ContaoManager\\Plugin"
    }
}
